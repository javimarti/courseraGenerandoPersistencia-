<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/cvPerfilMascotas"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:onClick="positionAction">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/petImgPerfil"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:contentDescription="@string/descpet"
            android:src="@drawable/pet48" />
        <TextView
            android:id="@+id/petName"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_below="@+id/petImg"
            android:layout_centerHorizontal="true"
            android:text="@string/petName" />

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:numColumns="3">
            <ImageView
                android:layout_height="90dp"
                android:layout_width="120dp"
                android:layout_margin="10dp"
                android:src="@drawable/pet48"
                />
            <ImageView
                android:layout_height="90dp"
                android:layout_width="120dp"
                android:layout_margin="10dp"
                android:src="@drawable/pet48"
                />
            <ImageView
                android:layout_height="90dp"
                android:layout_width="120dp"
                android:layout_margin="10dp"
                android:src="@drawable/pet48"
                />
           

        </androidx.gridlayout.widget.GridLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>